{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "eu-central-1",
      "source_ami": "ami-0084a47cc718c111a",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "mysql-db-{{timestamp}}"
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "../ansible/db_install.yml",
      "extra_arguments": [
        "--extra-vars",
        "mysql_user={{user `db_user`}} mysql_pass={{user `db_pass`}} mysql_db={{user `db_name`}}"
      ]
    }
  ],
  "variables": {
    "db_user": "dbuser",
    "db_pass": "dbpassword",
    "db_name": "flaskdb"
  }
}
